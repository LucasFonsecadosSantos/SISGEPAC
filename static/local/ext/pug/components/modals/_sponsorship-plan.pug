.modal.fadeInDown.text-left#sponsorshipPlanModal.lg(sisgepac-modal="sponsorship-plan-modal", tabindex="-1", role="dialog", aria-labelledby="myModalLabel34", style="display: none;", aria-hidden="true")
    .modal-dialog.modal-lg(role="document")
        .modal-content
            .modal-header.bg-danger
                h3.modal-title.text-white#sponsorshipplan_modal_title
                button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                i.la.la-times.text-white(aria-hidden="true")
            form#sponsorshipplan_modal_dataForm
                input#sponsorshipplan_modal_data_id(type="hidden")
                .modal-body
                    .bs-callout-primary.callout-border-left.callout-square.p-1.mb-2
                        strong#sponsorshipplan_modal_label_callout-title
                        p#sponsorshipplan_modal_label_callout-text
                    
                    fieldset.form-group.form-group-style.border-light
                        label#sponsorshipplan_modal_label_name.m-0
                        input.form-control.input-sm.m-0.p-0#sponsorshipplan_modal_data_name(type="text")
                        p.text-left
                            small.text-muted#sponsorshipplan_modal_label_helper-name

                    fieldset.form-group.form-group-style.border-light
                        label.m-0#sponsorshipplan_modal_label_description
                        textarea.form-control.input-sm.m-0.p-0.mt-1#sponsorshipplan_modal_data_description(type="text", rows="3")
                        p.text-left
                            small.text-muted#sponsorshipplan_modal_label_helper-description

                    fieldset.form-group.form-group-style.border-light
                        label.m-0#sponsorshipplan_modal_label_price
                        input.form-control.input-sm.m-0.p-0.mt-1#sponsorshipplan_modal_data_price(type="number")
                        p.text-left
                            small.text-muted#activity_register_label_price-helper
                   

                    fieldset.form-group.form-group-style.border-light
                        label#sponsorshipplan_modal_label_avatar.m-0
                        .custom-file
                            input.custom-file-input.input-sm.m-0.p-0#sponsorshipplan_modal_data_avatar(name="upavatar",type="file")
                            label.custom-file-label.input-sm.m-0.p-0#sponsorshipplan_modal_label_avatar2(for="sponsorshipplan_modal_data_avatar" , aria-describedby="sponsorshipplan_modal_data_avatar")

                .modal-footer
                    button.btn.btn-outline-success#sponsorshipplan_modal_button_create.d-none(type="button")
                    button.btn.btn-outline-success#sponsorshipplan_modal_button_update.d-none(type="button")
